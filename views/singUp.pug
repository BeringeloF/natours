extends base


block content 
          main.main
            .login-form.singup-form
                h2.heading-secondary.ma-bt-lg Sing up on our website
                form.form.form--login
                 .form__group
                    label.form__label(for='name') Name
                    input#name.form__input(type='text', required)
                 .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                 .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8' value='test1234')
                 .form__group.ma-bt-md
                    label.form__label(for='password-confirm') Password
                    input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8' value='test1234')
                 .form__group
                    label.form__label(for='phone') Phone number
                    input#phone.form__input(type='phone', required)
                 .form__group
                    button.btn.btn--green Sing Up